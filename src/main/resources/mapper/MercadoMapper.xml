<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="java_core_api.api_java_core.mapper.MercadoMapper">
    <select id="findByCnpj" resultType="java_core_api.api_java_core.domain.Mercado">
        SELECT * FROM cadastro.mercado WHERE cnpj = #{cnpj}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cadastro.mercado (razao_social, endereco, cnpj, latitude, longitude)
        VALUES (#{razaoSocial}, #{endereco}, #{cnpj}, #{latitude}, #{longitude})
    </insert>

</mapper>
